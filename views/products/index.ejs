<% layout('./layouts/boilerplate') -%>
    <div class="container mt-5">
        <div class="row">
            <h1>All Products!</h1>
            <ul>
                <% for (const product of products) { %>
                    <a href="/products/<%= product._id %>">
                        <li>
                            <%= product.name %>
                        </li>
                    </a>
                    <% } %>
            </ul>

            <a href="/products/new">Add New Product</a>
        </div>
    </div>